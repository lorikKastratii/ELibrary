{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Jwt": {
    "Issuer": "ELibrary",
    "Audience": "ELibraryUsers",
    "SecretKey": "MySuperLongSecretKey1234567890123456!"
  },
  "ReverseProxy": {
    "Routes": {
      "booksService": {
        "ClusterId": "booksCluster",
        "Match": { "Path": "/api/book/{**catch-all}" },
        //"AuthorizationPolicy": "AuthenticatedUsers"
      },
      "usersService": {
        "ClusterId": "usersCluster",
        "Match": { "Path": "/api/user/{**catch-all}" }
      },
      "ordersService": {
        "ClusterId": "ordersCluster",
        "Match": { "Path": "/api/order/{**catch-all}" },
        "AuthorizationPolicy": "AuthenticatedUsers"
      }
    },
    "Clusters": {
      "booksCluster": {
        "Destinations": {
          "booksService": { "Address": "http://elibrary.books:8083" }
        }
      },
      "usersCluster": {
        "Destinations": {
          "usersService": { "Address": "http://elibrary.users:8080" }
        }
      },
      "ordersCluster": {
        "Destinations": {
          "ordersService": { "Address": "http://elibrary.orders:8080" }
        }
      }
    }
  }
}
