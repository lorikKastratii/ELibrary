{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "users": {
        "ClusterId": "usersCluster",
        "Match": { "Path": "/api/user/{**catch-all}" }
      },
      "books": {
        "ClusterId": "booksCluster",
        "Match": { "Path": "/api/book/{**catch-all}" }
      },
      "orders": {
        "ClusterId": "ordersCluster",
        "Match": { "Path": "/api/order/{**catch-all}" }
      }
    },
    "Clusters": {
      "usersCluster": {
        "Destinations": {
          "usersService": { "Address": "http://elibrary.users:8080" }
        }
      },
      "booksCluster": {
        "Destinations": {
          "booksService": { "Address": "http://elibrary.books:8083" }
        }
      },
      "ordersCluster": {
        "Destinations": {
          "ordersService": { "Address": "http://elibrary.orders:8080" }
        }
      }
    }
  }
}
